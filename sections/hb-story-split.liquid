<section class="section hb-y2k-sparkle">
  <div class="page-width">
    <div class="hb-story hb-glass">
      <div class="hb-story__media">
        {% if section.settings.image != blank %}
          {{ section.settings.image | image_url: width: 1600 | image_tag: loading: 'lazy' }}
        {% else %}
          <div class="hb-story__ph">Upload an image</div>
        {% endif %}
      </div>

      <div class="hb-story__copy">
        <div class="hb-kicker">{{ section.settings.kicker | escape }}</div>
        <h2 class="hb-story__title">{{ section.settings.title | escape }}</h2>
        <div class="hb-story__text">{{ section.settings.text }}</div>

        {% if section.settings.btn_label != blank and section.settings.btn_link != blank %}
          <a class="button button--primary" href="{{ section.settings.btn_link }}">{{ section.settings.btn_label | escape }}</a>
        {% endif %}

        {% if section.settings.tagline != blank %}
          <div class="hb-pill" style="margin-top:14px;">{{ section.settings.tagline | escape }}</div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  .hb-story{
    display:grid;
    grid-template-columns: 1fr 1fr;
    overflow:hidden;
  }
  .hb-story__media img{ width:100%; height:100%; object-fit:cover; display:block; min-height: 420px; }
  .hb-story__ph{ min-height: 420px; display:grid; place-items:center; opacity:.7; }

  .hb-story__copy{
    padding: clamp(18px, 3vw, 34px);
    display:flex;
    flex-direction:column;
    justify-content:center;
    gap: 10px;
  }
  .hb-story__title{ margin: 0; font-size: clamp(1.8rem, 2.6vw, 2.5rem); }
  .hb-story__text{ opacity:.9; line-height:1.6; }
  .hb-story__text p{ margin: 0 0 10px; }

  @media (max-width: 900px){
    .hb-story{ grid-template-columns:1fr; }
    .hb-story__media img{ min-height: 260px; }
  }
</style>

{% schema %}
{
  "name": "HB Story Split",
  "settings": [
    { "type":"text", "id":"kicker", "label":"Kicker", "default":"honey&blush" },
    { "type":"text", "id":"title", "label":"Title", "default":"Soft, but make it spicy." },
    { "type":"richtext", "id":"text", "label":"Text", "default":"<p>We make cozy graphic tees for girls who look innocent and think dangerous.</p><p>Clean lines, Y2K sparkle, and just enough attitude.</p>" },
    { "type":"image_picker", "id":"image", "label":"Image" },
    { "type":"text", "id":"btn_label", "label":"Button label", "default":"Read our story" },
    { "type":"url", "id":"btn_link", "label":"Button link" },
    { "type":"text", "id":"tagline", "label":"Small tagline", "default":"Printed to order • no overstock • less waste" }
  ],
  "presets":[{ "name":"HB Story Split" }]
}
{% endschema %}