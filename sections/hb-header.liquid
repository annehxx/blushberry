{% comment %}
  honey&blush — Header
  Reference-inspired: warm bar, logo left, nav center-left, icons right.
{% endcomment %}

<section class="hb-header-wrap" data-hb-header>
  <header class="hb-header" role="banner">
    <div class="page-width hb-header__inner">
      <div class="hb-header__left">
        <button
          class="hb-burger"
          type="button"
          aria-label="Open menu"
          aria-controls="hbDrawer-{{ section.id }}"
          aria-expanded="false"
          data-hb-drawer-open
        >
          <span class="hb-burger__lines" aria-hidden="true"></span>
        </button>

        <a class="hb-logo" href="{{ routes.root_url }}" aria-label="{{ shop.name }}">
          {% if section.settings.logo != blank %}
            {{ section.settings.logo | image_url: width: 360 | image_tag: loading: 'eager', class: 'hb-logo__img', alt: shop.name }}
          {% else %}
            <span class="hb-logo__text">{{ section.settings.logo_text | default: shop.name | escape }}</span>
          {% endif %}
        </a>
      </div>

      {% if section.settings.menu != blank %}
        <nav class="hb-nav" aria-label="Primary navigation">
          <ul class="hb-nav__list">
            {% for link in section.settings.menu.links %}
              <li class="hb-nav__item">
                <a class="hb-nav__link{% if link.current %} is-active{% endif %}" href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </nav>
      {% endif %}

      <div class="hb-header__right">
        {% if section.settings.show_search %}
          <a class="hb-icon" href="{{ routes.search_url }}" aria-label="Search">
            <svg viewBox="0 0 24 24" aria-hidden="true" focusable="false">
              <circle cx="11" cy="11" r="6.5"></circle>
              <path d="M16 16l5 5"></path>
            </svg>
          </a>
        {% endif %}

        {% if section.settings.show_account and shop.customer_accounts_enabled %}
          <a class="hb-icon" href="{{ routes.account_url }}" aria-label="Account">
            <svg viewBox="0 0 24 24" aria-hidden="true" focusable="false">
              <circle cx="12" cy="8" r="4"></circle>
              <path d="M4.5 20c1.8-3.8 4.3-5.6 7.5-5.6s5.7 1.8 7.5 5.6"></path>
            </svg>
          </a>
        {% endif %}

        {% if section.settings.show_cart %}
          <a class="hb-icon hb-cart" href="{{ routes.cart_url }}" aria-label="Cart">
            <svg viewBox="0 0 24 24" aria-hidden="true" focusable="false">
              <path d="M7 8.5h10.5l-1.1 9.2H7.8z"></path>
              <path d="M9 8V7a3 3 0 0 1 6 0v1"></path>
            </svg>
            {% if cart.item_count > 0 %}
              <span class="hb-cart__bubble" aria-label="{{ cart.item_count }} items in cart">{{ cart.item_count }}</span>
            {% endif %}
          </a>
        {% endif %}
      </div>
    </div>
  </header>

  <div class="hb-drawer" id="hbDrawer-{{ section.id }}" aria-hidden="true" data-hb-drawer>
    <div class="hb-drawer__backdrop" data-hb-drawer-close></div>
    <div class="hb-drawer__panel" role="dialog" aria-modal="true" aria-label="Menu">
      <div class="hb-drawer__top">
        <div class="hb-drawer__title">{{ section.settings.drawer_title | default: shop.name | escape }}</div>
        <button class="hb-drawer__close" type="button" aria-label="Close menu" data-hb-drawer-close>
          <span aria-hidden="true">×</span>
        </button>
      </div>

      {% if section.settings.menu != blank %}
        <nav class="hb-drawer__nav" aria-label="Mobile navigation">
          <ul class="hb-drawer__list">
            {% for link in section.settings.menu.links %}
              <li class="hb-drawer__item">
                <a class="hb-drawer__link" href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </nav>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .hb-header-wrap {
    position: relative;
    z-index: 60;
  }

  .hb-header {
    background: #eadfa9;
    border-bottom: 1px solid rgba(90, 62, 40, 0.15);
  }

  .hb-header__inner {
    min-height: 96px;
    display: grid;
    grid-template-columns: auto 1fr auto;
    align-items: center;
    gap: 28px;
  }

  .hb-header__left {
    display: flex;
    align-items: center;
    gap: 14px;
  }

  .hb-logo {
    text-decoration: none;
    color: #6a452f;
    line-height: 1;
  }

  .hb-logo__img {
    height: {{ section.settings.logo_height }}px;
    width: auto;
    display: block;
  }

  .hb-logo__text {
    font-family: Georgia, serif;
    font-size: 2rem;
    letter-spacing: 0.01em;
  }

  .hb-nav {
    justify-self: start;
  }

  .hb-nav__list {
    list-style: none;
    display: flex;
    align-items: center;
    gap: 28px;
    margin: 0;
    padding: 0;
  }

  .hb-nav__link {
    text-decoration: none;
    color: #6a452f;
    font-size: 1rem;
    line-height: 1;
    padding-bottom: 4px;
    border-bottom: 1px solid transparent;
    transition: opacity 0.15s ease, border-color 0.15s ease;
  }

  .hb-nav__link:hover,
  .hb-nav__link.is-active {
    border-bottom-color: #6a452f;
  }

  .hb-header__right {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 12px;
  }

  .hb-icon {
    width: 28px;
    height: 28px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: #6a452f;
    text-decoration: none;
    position: relative;
  }

  .hb-icon svg {
    width: 22px;
    height: 22px;
    fill: none;
    stroke: currentColor;
    stroke-width: 1.6;
    stroke-linecap: round;
    stroke-linejoin: round;
  }

  .hb-cart__bubble {
    position: absolute;
    right: -6px;
    top: -5px;
    min-width: 16px;
    height: 16px;
    border-radius: 999px;
    background: #6a452f;
    color: #eadfa9;
    font-size: 10px;
    display: grid;
    place-items: center;
    padding: 0 4px;
  }

  .hb-burger {
    display: none;
    width: 36px;
    height: 36px;
    border: 1px solid rgba(90, 62, 40, 0.3);
    border-radius: 999px;
    background: transparent;
    color: #6a452f;
    cursor: pointer;
  }

  .hb-burger__lines,
  .hb-burger__lines::before,
  .hb-burger__lines::after {
    content: "";
    display: block;
    width: 16px;
    height: 1.5px;
    background: currentColor;
    border-radius: 2px;
    transition: transform 0.2s ease;
  }

  .hb-burger__lines::before {
    transform: translateY(-5px);
  }

  .hb-burger__lines::after {
    transform: translateY(3.5px);
  }

  .hb-drawer {
    position: fixed;
    inset: 0;
    z-index: 90;
    display: none;
  }

  .hb-drawer.is-open {
    display: block;
  }

  .hb-drawer__backdrop {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.25);
  }

  .hb-drawer__panel {
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: min(360px, 86vw);
    background: #f6efcc;
    border-right: 1px solid rgba(90, 62, 40, 0.2);
    padding: 18px;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .hb-drawer__top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid rgba(90, 62, 40, 0.2);
    padding-bottom: 8px;
  }

  .hb-drawer__title {
    font-family: Georgia, serif;
    color: #6a452f;
    font-size: 1.2rem;
  }

  .hb-drawer__close {
    border: 0;
    background: transparent;
    color: #6a452f;
    font-size: 1.6rem;
    line-height: 1;
    cursor: pointer;
  }

  .hb-drawer__list {
    list-style: none;
    margin: 0;
    padding: 6px 0 0;
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .hb-drawer__link {
    display: block;
    text-decoration: none;
    color: #6a452f;
    padding: 10px 8px;
    border-bottom: 1px solid rgba(90, 62, 40, 0.14);
  }

  @media (max-width: 989px) {
    .hb-header__inner {
      min-height: 76px;
      grid-template-columns: auto 1fr auto;
      gap: 12px;
    }

    .hb-burger {
      display: inline-flex;
      align-items: center;
      justify-content: center;
    }

    .hb-nav {
      display: none;
    }

    .hb-logo__img {
      height: {{ section.settings.logo_height | minus: 4 | at_least: 24 }}px;
    }
  }
</style>

<script>
  (function() {
    var wrap = document.querySelector('[data-hb-header]');
    if (!wrap) return;

    var drawer = wrap.querySelector('[data-hb-drawer]');
    var openBtn = wrap.querySelector('[data-hb-drawer-open]');
    var closeEls = wrap.querySelectorAll('[data-hb-drawer-close]');

    if (!drawer || !openBtn) return;

    function openDrawer() {
      drawer.classList.add('is-open');
      drawer.setAttribute('aria-hidden', 'false');
      openBtn.setAttribute('aria-expanded', 'true');
      document.documentElement.style.overflow = 'hidden';
    }

    function closeDrawer() {
      drawer.classList.remove('is-open');
      drawer.setAttribute('aria-hidden', 'true');
      openBtn.setAttribute('aria-expanded', 'false');
      document.documentElement.style.overflow = '';
    }

    openBtn.addEventListener('click', openDrawer);
    closeEls.forEach(function(el) {
      el.addEventListener('click', closeDrawer);
    });

    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') closeDrawer();
    });

    drawer.querySelectorAll('a').forEach(function(link) {
      link.addEventListener('click', closeDrawer);
    });
  })();
</script>

{% schema %}
{
  "name": "HB Header",
  "settings": [
    { "type": "image_picker", "id": "logo", "label": "Logo image" },
    { "type": "text", "id": "logo_text", "label": "Logo text (fallback)", "default": "honey&blush" },
    { "type": "range", "id": "logo_height", "label": "Logo height (px)", "min": 24, "max": 72, "step": 2, "default": 52 },
    { "type": "link_list", "id": "menu", "label": "Menu" },
    { "type": "checkbox", "id": "show_search", "label": "Show search icon", "default": true },
    { "type": "checkbox", "id": "show_account", "label": "Show account icon", "default": true },
    { "type": "checkbox", "id": "show_cart", "label": "Show cart icon", "default": true },
    { "type": "text", "id": "drawer_title", "label": "Drawer title", "default": "honey&blush" }
  ],
  "presets": [
    { "name": "HB Header" }
  ]
}
{% endschema %}
